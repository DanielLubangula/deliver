<style>
/* Style général */
:root {
    --primary: #2c3e50;
    --secondary: #34495e;
    --success: #27ae60;
    --danger: #e74c3c;
    --warning: #f39c12;
  }

body {
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #f5f5f5;
}

.product-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 1200px;
    margin: 0 auto;
}

.product-row {
    display: flex;
    background: white;
    padding: 15px;
    border-radius: 8px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    align-items: center;
    transition: transform 0.2s;
}

.product-row:hover {
    transform: translateY(-2px);
}

.product-images {
    display: flex;
    gap: 10px;
    margin-right: 20px;
    flex: 0 0 300px;
}

.product-image {
    width: 80px;
    height: 80px;
    object-fit: cover;
    cursor: pointer;
    border-radius: 4px;
    transition: transform 0.3s;
}

.product-image:hover {
    transform: scale(2.5);
    z-index: 1000;
}

.product-info {
    flex: 1;
}

.seller-info {
    display: flex;
    align-items: center;
    margin-left: auto;
    padding-left: 20px;
}

.seller-photo {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    margin-right: 10px;
}

.price {
    font-size: 1.5em;
    color: #e44d26;
    font-weight: bold;
}

.product-name {
    font-size: 1.2em;
    margin-bottom: 10px;
    color: #333;
}

.btn-delete {
    background-color: var(--danger);
    color: white;
    padding: 0.5rem 1rem;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    margin-right: 0.5rem;
    transition: opacity 0.3s;
    margin: 5px;
}



/* Responsive */
@media (max-width: 768px) {
    .product-row {
        flex-direction: column;
        text-align: center;
    }
    
    .product-images {
        flex-wrap: wrap;
        justify-content: center;
        margin-right: 0;
        margin-bottom: 15px;
    }
    
    .seller-info {
        margin-left: 0;
        margin-top: 15px;
        justify-content: center;
    }
}
</style>
<div class="product-container" id="productContainer">
    <img src="/spinner.gif" alt="" srcset="">
</div>

<script>

    const API_URL = "http://localhost:5000/deliver/admin/api/findProduct";
    //const API_URL = "http://192.168.43.14:5000/deliver/admin/api/findProduct";
    // Charger les produits depuis l'API
    const loadProducts = async () => {
      try {
        const response = await fetch(`${API_URL}`);
        const products = await response.json();
        const productContainer = document.getElementById("productContainer");
        productContainer.innerHTML = ""; // Réinitialiser le contenu

        products.forEach((product) => {
          const productRow = document.createElement("div");
          productRow.className = "product-row";

          productRow.innerHTML = `
            <div class="product-images">
              ${product.images
                .map(
                  (image) =>
                    `<img src="${image.path}" alt="${product.name}" class="product-image">`
                    
                )
                .join("")}
            </div>
            <div class="product-info">
              <h2 class="product-name">${product.name}</h2>
              <p class="price">${product.price} €</p>
            </div>
            <div class="seller-info">
              <img src="${product.user.profileImagePath}" alt="Photo Vendeur" class="seller-photo">
              <span>${product.user.companyName}</span>
            </div>
            <button class="btn-delete" onclick="deleteProduct('${product._id}')">Supprimer</button>
          `;

          productContainer.appendChild(productRow);
        });
      } catch (err) {
        console.error("Erreur lors du chargement des produits :", err);
      }
    };

    // Supprimer un produit
    const deleteProduct = async (id) => {
      if (confirm("Êtes-vous sûr de vouloir supprimer ce produit ?")) {
        try {
          const response = await fetch(`${API_URL}/${id}`, {
            method: "DELETE",
          });

          if (response.ok) {
            alert("Produit supprimé avec succès !");
            loadProducts(); // Recharger les produits
          } else {
            alert("Erreur lors de la suppression du produit.");
          }
        } catch (err) {
          console.error("Erreur lors de la suppression :", err);
        }
      }
    };

    // Charger les produits au démarrage
    loadProducts();
  </script>